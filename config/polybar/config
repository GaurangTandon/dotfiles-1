[module/date]
type = internal/date
interval = 1

format = <label>

date = %d/%m/%Y
time = %H:%M:%S

label = %time% %date%

[module/cmus]
type = custom/script

exec = cmus-polybar
exec-if = pgrep -x cmus

format = %{A1:cmus-polybar -p:}%{A} <label> %{A1:cmus-polybar -n:}%{A}
format-underline = #2aa198

interval = 1

click-left = cmus-polybar -u

[module/spotify]
