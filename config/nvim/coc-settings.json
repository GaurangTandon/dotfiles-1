{
  "languageserver": {
    "dart": {
      "command": "dart",
      "args": [
        "/opt/dart-sdk/bin/snapshots/analysis_server.dart.snapshot",
        "--lsp"
      ],
      "filetypes": ["dart"],
      "disableDynamicRegister": true,
      "trace.server": "verbose"
    },
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod"],
      "filetypes": ["go"]
    },
    "digestif": {
      "command": "digestif",
      "filetypes": ["tex", "plaintex", "context"]
    },
    "clangd": {
      "command": "clangd",
      "args": ["--background-index"],
      "rootPatterns": ["compile_flags.txt", "compile_commands.json", ".vim/", ".git/", ".hg/"],
      "filetypes": ["c", "cpp", "objc", "objcpp"]
    },
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"]
    }
  },
  "coc.preferences.formatOnSaveFiletypes": ["dart" , "rust", "c", "cpp",
                                            "python", "javascript", "javascriptreact",
                                            "typescript", "typescriptreact","go"],
  "python.linting.pylintArgs": ["--extension-pkg-whitelist=numpy", "--disable=C0103"],
  "python.formatting.provider": "black",
  "eslint.autoFixOnSave": true
}
